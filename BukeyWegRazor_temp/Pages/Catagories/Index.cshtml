@page
@model BukeyWegRazor_temp.Pages.Catagories.IndexModel
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Catagory List</h2>	
		</div>
		<div class="col-6 text-end">
			<a asp-page="/catagories/create" class="btn btn-primary">
				<i class="bi bi-plus-square-dotted"></i> Create New Catagory
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>

	<tr>
		<th>Catagory Name</th>
		<th>Display Order</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.CatagoryList.OrderBy(m=>m.DisplayOrder)){
		<tr>
			<td>@obj.Name</td>
			<td>@obj.DisplayOrder</td>
			<td>
				<div classs="w-75 btn-group" role="group">
					<a asp-page="/catagories/edit" asp-route-id="@obj.CatagoreyId" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
					</a>
						<a asp-page="/catagories/delete" asp-route-id="@obj.CatagoreyId" class="btn btn-danger mx-2">

							<i class="bi bi-trash"></i> Delete
					</a>
				</div>
			</td>
		</tr>
		}
	</tbody>
</table>
